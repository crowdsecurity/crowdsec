#!/usr/bin/env bash

#shellcheck disable=SC1007
THIS_DIR=$(CDPATH= cd -- "$(dirname -- "$0")" && pwd)
cd "${THIS_DIR}" || exit 1
# shellcheck disable=SC1091
. ./.environment.sh

backend_script="./lib/init/crowdsec-${INIT_BACKEND}"

if [[ ! -x "${backend_script}" ]]; then
    echo "unknown init system '${INIT_BACKEND}'" >&2
    exit 1
fi

exec "${backend_script}" "$@"
